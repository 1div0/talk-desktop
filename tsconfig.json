{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["*.ts"],
	"exclude": ["node_modules", "vendor"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,
		"lib": ["ESNext"],
		"baseUrl": ".",
		"paths": {
			"@global-styles/*": ["resources/server-global-styles/master/*"],
		},
	},
	"vueCompilerOptions": {
		"target": 2.7,
	}
}
